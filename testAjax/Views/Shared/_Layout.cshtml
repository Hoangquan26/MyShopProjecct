@{
    testAjax.Models.WebUser db = (testAjax.Models.WebUser)Session["user"];
    var myName = "";
    bool isAdmin = false;
    int myID = 0;
    string myAvatarPath = "/images/avatars/UnknownAvatar.png";
    if (db != null)
    {
        myName = db.UserName;
        if (db.isAdmin == true)
        {
            isAdmin = true;
        }
    }
    if (db != null)
    {
        myID = db.id;
        myName = db.UserName;
    }
    if (db != null && db.avatarPath.Length > 0)
    {
        myAvatarPath = db.avatarPath.ToString();
    }
}
<!DOCTYPE html>
