        <script>
        let userIcon = document.querySelector(".userIcon")
        let Logout = document.querySelector(".Logout-btn");
        if (Logout != null) {
            Logout.addEventListener("click", () => {
                let url = "/Account/LogoutAjax"
                let spanValue = userIcon.querySelector("span");
                if (spanValue.textContent.length != 0) {
                    fetch(url)
                        .then(response => response.json())
                        .then(data => alert(data.da))
                    spanValue.textContent = "";
                    window.location.href = "/Home"
                }
            })
        }
        function userInformation() {
            document.getElementById("user-info").classList.add("flex-visible")
            getUserData(@myID)
            document.querySelector(".user-infomation-item:first-child").style.display = "none"
        }
        let toogle_nav = document.querySelector('.toogle-nav i');
        toogle_nav.addEventListener('click', () => {
            document.getElementById('side-navbar').classList.toggle("closeNav")
            document.getElementById('navbar').classList.toggle("closeNav")
            document.getElementById("footer-wrapper").classList.toggle("closeNav")
            document.querySelector(".container").classList.toggle('closeNav')
        })
