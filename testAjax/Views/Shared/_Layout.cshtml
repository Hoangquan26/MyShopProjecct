        }
        #side-navbar.closeNav .list-menu{
            margin: 30px 0;
        }
        #side-navbar.closeNav .list-menu>li>a>span {
            display: none;
        }
        #side-navbar.closeNav .category-list{
            width: 220px;
            left: 100%;
        }

        #side-navbar.closeNav i {
            transition: all ease 0.5s;
        }
        #side-navbar.closeNav .toogle-nav {
