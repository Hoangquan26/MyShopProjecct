
@{
    ViewBag.Title = "Thống kê";
    Layout = "~/Areas/Admin/Views/Shared/AdminTemplate.cshtml";
}
@section style {
        <link rel="stylesheet" href="~/Areas/Admin/css/adminIndex.css" />
    }
<div class="month-wrapper">
</div>
<div class="wrapper">
    <div class="sales">
        <div class="sales-header">
            <h4>Doanh số</h4>
        </div>
        <div class="sales-content">
            <div class="sales-item">
                <div class="sales-item-icon">
                    <i class="fa-solid fa-calculator"></i>
                </div>
                <div class="sales-item-content">
                    <span>Doanh thu dự kiến</span>
                    <h3 class="allOrderCost">0đ</h3>
                </div>
            </div>
            <div class="sales-item">
                <div class="sales-item-icon">
                    <i class="fa-solid fa-magnifying-glass-chart"></i>
                </div>
                <div class="sales-item-content">
                    <span>Tổng đơn hàng</span>
                    <h3 class="allOrderCount">0</h3>
                </div>
            </div>
            <div class="sales-item">
                <div class="sales-item-icon">
                    <i class="fa-solid fa-comment-dollar"></i>
                </div>
                <div class="sales-item-content">
                    <span>Doanh thu thực</span>
                    <h3 class="realOrderCost">0đ</h3>
                </div>
            </div>
        </div>
        <div class="sales-chart">
            <canvas id="allOrderCost"></canvas>
            <canvas id="allOrderCount"></canvas>
            <canvas id="realOrderCost"></canvas>
        </div>
        <div class="chart-header">
            <button>Báo cáo chi tiết</button>
        </div>
    </div>
</div>
<script src="~/Scripts/chart.min.js"></script>
<script src="~/Areas/Admin/js/adminIndex.js"></script>